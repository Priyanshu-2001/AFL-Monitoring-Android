<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"-->

    <RelativeLayout
        android:id="@+id/dist_item"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/loc"
            android:src="@drawable/ic_locations"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/-->

        <TextView
            android:id="@+id/in_admin_ado"
            android:textColor="@color/white"
            android:fontFamily="@font/arial"
            android:textSize="23dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/alp_image" />
<!--        android:layout_marginTop="15dp"-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/dist"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/in_admin_ado"
            android:padding="10dp"
            android:textColor="#000000" />
<!--                    android:layout_marginRight="16dp"-->

        <ImageButton
            android:id="@+id/ado_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_navigate_next_24"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2px"
            android:layout_gravity="center_horizontal"
            android:background="#707070"
            android:layout_below="@+id/dist"
            android:layout_toRightOf="@id/in_admin_ado"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@id/ado_next"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>